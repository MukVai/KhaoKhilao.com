@model ProductDTO

<form asp-action="ProductDelete">
    <br />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">Delete Product</h1>
                </div>
            </div>
        </div>        
        <input hidden asp-for="ProductId" />
        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-2">
                    <label class="control-label pt-2" style="font-size:20px;">Product Name</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Name" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="CategoryName" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <label class="control-label pt-2" style="font-size:20px;">Description</label>
                </div>
                <div class="col-10 pb-3">
                    <textarea asp-for="Description" disabled class="form-control" rows="5"></textarea>
                </div>
                <div class="col-2">
                    <label class="control-label pt-2" style="font-size:20px;">Price</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="Price" disabled class="form-control" />
                </div>
                <div class="col-2">
                    <label class="control-label pt-2" style="font-size:20px;">Image URL</label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="ImageURL" disabled class="form-control" />
                </div>

                <div class="col-5 offset-2">

                    <a asp-action="ProductIndex" class="btn-primary btn form-control ">Back to List</a>
                </div>
                <div class="col-5">
                    <input asp-action="ProductDelete" type="submit" value="Delete" class="btn btn-danger form-control" />

                </div>

            </div>
        </div>
    </div>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}